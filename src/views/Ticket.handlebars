<div class="d-grid py-5 mt-5">
    <h1 class="text-center text-success fs-6 text-uppercase fw-bold">Gracias por preferir nuestra tienda</h1>
    <h2 class="text-center text-success fs-6 text-uppercase fw-bold">Ingresa los datos de envio.</h2>
    <div class="d-flex align-items-center gap-1 mt-5 justify-content-center">
        <div class="mb-3">
            <strong>Id del comprador:</strong>
        </div>
        {{#each ticket}}
        <p title="Id comprador" class="text-center">{{purchaser}}</p>
        {{/each}}
    </div>
    <div class="d-flex align-items-center gap-1 justify-content-center">
        <div class="mb-3">
            <strong>Orden de compra numero: </strong>
        </div>
        {{#each ticket}}
        <p title="Orden de compra" class="text-center">{{code}}</p>
        {{/each}}
    </div>
    <div class="d-flex align-items-center justify-content-center gap-1">
        <div class="mb-3">
            <strong>Costo total de la compra: </strong>
        </div>
        <span class="mb-3 font-bold">$</span>
        {{#each ticket}}
        <p title="Orden de compra" class="text-center">{{amount}}</p>
        {{/each}}
    </div>
    <div class="constainer d-flex align-items-center justify-content-center gap-5 mb-3">
    <a class="btn btn-success px-2 py-1 rounded text-decoration-none fs-6 fw-bold" href="/products">Volver a la tienda</a>
    <a class="btn btn-success px-2 py-1 rounded text-decoration-none fs-6 fw-bold" href="/api/users/profile">ir a mi perfil</a>
    </div>
    <div class="container border form rounded mb-3 py-3">
        <form class="d-grid px-4">
            <div>
                <h1 class="fs-6 fw-bold text-center text-uppercase">Datos de envio</h1>
            </div>
            <input type="text" class="mb-2 rounded form-control" id="name" placeholder="Ingresa tu nombre">
            <input type="text" class="mb-2 rounded form-control" id="city" placeholder="Ingresa la ciudad donde vives">
            <input type="text" class="mb-2 rounded form-control" id="location"
                placeholder="Ingresa el barrio donde vives">
            <input type="text" class="mb-2 rounded form-control" id="direction"
                placeholder="Ingresa la direccion donde recibiras tu envio">
            <a href="/pasarela-pago" class="btn btn-success fw-bold text-decoration-none text-uppercase">Metodos de
                pago</a>
        </form>
    </div>
</div>