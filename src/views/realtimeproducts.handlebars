<div class="container border form rounded mb-3 py-3">
    <form class="d-grid px-4">
        <div>
            <h1 class="fs-5 fw-bold text-center text-uppercase">Crear Producto</h1>
        </div>
        <input type="text" class="mb-2 rounded form-control" id="title" placeholder="Ingresa el nombre del producto">
        <input type="text" class="mb-2 rounded form-control" id="description"
            placeholder="Ingresa la descripcion del producto">
        <input type="number" class="mb-2 rounded form-control" id="price" placeholder="Ingresa el precio del producto">
        <input type="text" class="mb-2 rounded form-control" id="img"
            placeholder="Ingresa el link de la imagen del producto">
        <input type="text" class="mb-2 rounded form-control" id="code" placeholder="Ingresa el codigo del producto">
        <input type="number" class="mb-2 rounded form-control" id="stock"
            placeholder="Ingrese las unidades disponibles del producto">
        <input type="text" class="mb-2 rounded form-control" id="category"
            placeholder="Ingrese la categoria del producto">
        <select id="status" class="mb-4 form-control">
            <option value="true"> Activo </option>
            <option value="false"> Inactivo </option>
        </select>
        <button type="button" class="btn-ok fw-bold text-uppercase" id="btnEnviar">Crear producto</button>
    </form>
</div>

<div>
    <h2 class="fs-5 fw-bold text-center text-uppercase mb-3">Administrador de productos</h2>
    <div class="d-flex flex-wrap align-items-center justify-content-center gap-4" id="product-list"></div>
</div>

<script src="https://cdn.socket.io/4.7.4/socket.io.min.js"></script>
<script src="js/realtime.js"></script>