<h1 class="text-center mt-5 pb-5 py-5 text-success">Carrito de Compras</h1>
<div class="container">
    <div class="table-responsive-sm">
        {{#each productos}}
        <table class="table border border-dark">
            <tbody>
                <tr>
                    <td>
                        <h3 class="ms-5 mt-4 fs-6 fw-bold py-5">{{this.product.title}}</h3>
                    </td>
                    <td>
                        <h4 class="mt-4 py-5 fs-6 fw-bold">Cantidad: <span
                                class="text-secondary fw-bold">{{this.quantity}}</span></h4>
                    </td>
                    <td>
                        <h4 class="mt-4 py-5 fs-6 fw-bold">Precio: <span
                                class="text-secondary fw-bold">${{this.product.price}}</h4>
                    </td>
                    <td>
                        <button onclick="deleteProdFromUser('{{this.cartId}}', '{{this.product._id}}')"
                            class="btn btn-danger" style="margin-top: 70px;">Eliminar
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
        {{/each}}
        <div class="d-flex align-items-center justify-content-between">
            <h3 class="mt-2 fw-bold fs-5 text-dark text-uppercase">Precio Total: $<span
                    class="text-success">{{totalPurchase}}</span></h3>
            <div class="d-flex alignt-items-center justify-content-between">
                <a href="/products" class="btn btn-outline-dark me-3">Seguir comprando</a>
                <form action="/api/carts/{{cartId}}/purchase" method="POST">
                    <button type="submit" class="btn me-3 btn-outline-success">Realizar compra</button>
                </form>
                <button onclick="emptyUserCart('{{cartId}}')" class="btn btn-outline-danger">Vaciar Carrito</button>
            </div>
        </div>
    </div>

    <script>
        function deleteProdFromUser(cartId, productId) {
            fetch(`/api/carts/${cartId}/product/${productId}`, {
                method: 'DELETE'
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Error al eliminar el producto del carrito');
                    }
                    location.reload();
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }

        function emptyUserCart(cartId) {
            fetch(`/api/carts/${cartId}`, {
                method: 'DELETE'
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Error al vaciar el carrito');
                    }
                    location.reload();
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }
    </script>